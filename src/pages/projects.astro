---
import Layout from '../layouts/Layout.astro';
const allPosts = await Astro.glob('../pages/projects/*.md');
---

<Layout title='My Projects'>
  <main>
    <h1>Projects</h1>
    <ul>
      {
        allPosts.map((post) => (
          <li>
            <a href={post.url}>{post.frontmatter.title}</a>
          </li>
        ))
      }
    </ul>
  </main>
</Layout>
